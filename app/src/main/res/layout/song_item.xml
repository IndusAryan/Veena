<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-app"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/boxItemBackground"
    app1:cardCornerRadius="15dp"
    app1:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app1:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/stock_photo_clump_of_fantasy_anime_grass_digital_art_painting_on_a_white_background_1970849897_uju8_9w3p_transformed" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="NCS Music" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            tools:text="Mahendra Kapoor"/>

        <TextView
            android:id="@+id/song_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3 : 20"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
